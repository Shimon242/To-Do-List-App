sudo apt update
sudo apt install sqlite3
sudo apt install -y curl
sudo apt install libapache2-mod-wsgi-py3
curl -sS https://bootstrap.pypa.io/get-pip.py -o get-pip.py
sudo python3 get-pip.py
sudo python3 -m pip install --ignore-installed flask flask_sqlalchemy flask_login
sudo apt install apache2 libapache2-mod-wsgi-py3 python3-flask -y
sudo mkdir /var/www/html/todo_app/
sudo mkdir /var/www/html/todo_app/templates/
